@model DS3Wiki.Models.UserViewModel

@{
    ViewBag.Title = "Edit User Role";
}

<h2>Edit User Role</h2>

<hr />

@using (Html.BeginForm(
    actionName: "Edit",
    controllerName: "Users",
    routeValues: new { id = @Model.User.Id }))
{
    @Html.HiddenFor(x => x.User.Id)

    <div class="form-group">
        @Html.LabelFor(x => x.User.Email, new { @class = "control-label col-md-4" })
        <p>@Model.User.Email</p>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.RoleName, new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.DropDownListFor(x => x.RoleName, (SelectList)ViewBag.UserRoles, "-Select an user role-", new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.RoleName, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />

    <button class="btn btn-success" type="submit">Update role</button>
}