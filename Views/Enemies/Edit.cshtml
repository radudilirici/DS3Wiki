@model DS3Wiki.Models.Enemy

@{
    ViewBag.Title = "Edit Enemy";
}

<h2>Edit Enemy Information</h2>

<hr />

@using (Html.BeginForm(actionName: "Index",
    controllerName: "Enemies",
    method: FormMethod.Get))
{
    <button class="btn btn-warning">← List</button>
}

<br />
<br />

@using (Html.BeginForm())
{
    <div class="form-horizontal">

        @Html.HiddenFor(x => x.Id)

        <div class="form-group">
            @Html.LabelFor(x => x.Name, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Description, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Update Enemy" class="btn btn-success" />
            </div>
        </div>

    </div>
}

<div class="col-md-offset-3 col-md-9">
    @using (Html.BeginForm(actionName: "EditDrops",
        controllerName: "Enemies",
        method: FormMethod.Get,
        routeValues: new { id = Model.Id }))
    {
        <button class="btn btn-warning">Edit Drops</button>
    }
</div>